<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA"
    android:layoutDirection="rtl"
    tools:context=".NotesActivity">

    <TextView
        android:id="@+id/textNoNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אין הערות להצגה"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#999999"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:contentDescription="אין הערות זמינות להצגה כרגע" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="72dp"
        android:layout_above="@id/btnAddNote"
        android:contentDescription="רשימת הערות נוכחית" />

    <Button
        android:id="@+id/btnAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="➕ הוסף פתק חדש"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:elevation="4dp"
        android:contentDescription="לחצן להוספת פתק חדש" />

</RelativeLayout>

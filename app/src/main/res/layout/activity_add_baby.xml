<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 住驻转 转拽 砖"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:id="@+id/imageViewSelected"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_person_outline_24"
            android:scaleType="centerCrop"
            android:background="@drawable/image_circle_background"
            android:contentDescription="转 砖 转拽"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 专 转"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="砖 转拽"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="砖 转拽" />

        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="转专  (yyyy-MM-dd)"
            android:focusable="false"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="转专 " />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="砖拽 (拽状)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="砖拽 转拽" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" (住状)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription=" 转拽" />

        <EditText
            android:id="@+id/etAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="专转 ( )"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="专转" />

        <EditText
            android:id="@+id/etMedications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="转专驻转 拽注转 ( )"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="转专驻转 拽注转" />

        <Button
            android:id="@+id/btnSaveBaby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 砖专 转拽"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:contentDescription="驻转专 砖专转 转拽" />
    </LinearLayout>
</ScrollView>
